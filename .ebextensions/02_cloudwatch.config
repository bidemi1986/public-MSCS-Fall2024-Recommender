files:
  "/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json":
    mode: "000600"
    owner: root
    group: root
    content: |
      {
        "metrics": {
          "metrics_collected": {
            "cpu": {
              "measurement": ["cpu_usage_idle", "cpu_usage_user", "cpu_usage_system"]
            },
            "mem": {
              "measurement": ["mem_used_percent"]
            },
            "disk": {
              "measurement": ["disk_used_percent"],
              "resources": ["/"]
            }
          },
          "append_dimensions": {
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
          }
        },
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/streamlit/streamlit.log",
                  "log_group_name": "/aws/elasticbeanstalk/movie-recommender/streamlit.log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/eb-docker/containers/eb-current-app/*.log",
                  "log_group_name": "/aws/elasticbeanstalk/movie-recommender/application.log",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        }
      }

commands:
  01_install_cloudwatch_agent:
    command: yum install -y amazon-cloudwatch-agent
  02_start_cloudwatch_agent:
    command: /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a fetch-config -m ec2 -s -c file:/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json